<%- include("template/header") %>
<div id="login-container">
    <form class="login-form" action="/loginSubmit" method="post">
        <div class="input-group">
            <label for="username" class="login-text"><h1 class="login-text text-bg">Username</h1></label>
            <input type="text" id="username" name="email" placeholder="Enter your username">
        </div>
        <div class="input-group">
            <label for="password" class="login-text"><h1 class="login-text text-bg">Password</h1></label>
            <input type="password" id="password" name="password" placeholder="Enter your password">
        </div>
        <div class="remember-me">
            <input type="checkbox" id="remember" name="remember">
            <label for="remember" class="checkbox-label"><h1 class="login-text text-bg">Remember me</h1></label>
        </div>
        <button class="submit-button" type="submit"><h1 class="login-text">Login</h1></button>
        <a href="/api/password/requestReset" class="btn btn-link">Forgot your password?</a>
        <a href="/auth/google">
            <button>Sign in with Google</button>
          </a>
        <div class="qr-code">
            <h1 class="login-text text-bg">Or<br>Scan QR Code</h1>
        </div>
    </form>
</div>
<%- include("template/footer") %>
