<%- include("template/header") %>
<div class="px-4 py-5 my-5 text-center">
    <img class="d-block mx-auto mb-4" src="/images/gg.png" alt="gg" width="72" height="57">
    <h1 class="display-5 fw-bold text-body-emphasis" style="font-size: 50px; font-weight: 700;">Golden Gaming</h1>
    <div class="col-lg-6 mx-auto">
      <p class="lead mb-4" style="font-size: 25px; font-weight: 500;">Welcome, <%= userName %>.</p>
      <div class="d-grid gap-2 d-sm-flex justify-content-sm-center">
        <% if (!session.authenticated) { %>
          <a href="/login" class="btn btn-primary btn-lg px-4 gap-3">Login</a>
          <a href="/signup" class="btn btn-outline-secondary btn-lg px-4">Signup</a>
        <% } else { %>
        
      </div>
      <br><br>
      <button id="tutorialButton" type="button" data-toggle="modal" data-target="#tutorialModal">Help me get started</button>
      <% } %>
    </div>
  </div>

  <div id="tutorialModal" class="modal fade" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">Tutorial</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body" id="tutorialBody">
          
        </div>
        <div class="modal-footer">
          <button type="previous" id="prevButton" class="btn btn-primary">Previous</button> 
          <button type="button" id="nextButton" class="btn btn-primary">Next</button>
          
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        </div>
      </div>
    </div>
  </div>
<script src="/js/root.js"></script>
<%- include("template/footer") %>
