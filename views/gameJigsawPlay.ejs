        <div id="piece23" class="pieces"></div>
        <div id="piece24" class="pieces"></div>
      </div>

      <!-- Buttons to jumble and solve puzzle -->
      <div id="controls" class="aligncenter">
        <p>
          <input id="solve" type="button" value="Solve It" />
          <input id="jumble" type="button" value="Jumble It" />
        </p>

      </div>

    </form>

  </div>
</div>

