        <div id="grid22" class="grid"></div>
        <div id="grid23" class="grid"></div>
        <div id="grid24" class="grid"></div>
      </div>

      <!-- Grid where jumbled puzzle pieces go -->
      <div id="puzzlePieces">
        <div id="piece0" class="pieces"></div>
        <div id="piece1" class="pieces"></div>
