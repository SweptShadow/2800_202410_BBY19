<!-- Easter Egg code -->
<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
<script>
  $(document).ready(function() {

    $('#logo').dblclick(function() {

      //Add a firework effect
      $(this).addClass('firework').delay(500).queue(function(next) {
        $(this).removeClass('firework');
        next();
      });
      var logoImg = $(this);
      var originalSrc = '/images/logo.png';
      var secondSrc = '/images/logo2.png';

      logoImg.addClass('firework').delay(500).queue(function(next) {
        logoImg.removeClass('firework');
        next();
      });

      logoImg.animate({
          'width': '250px',
          'height': '150px'
        }, 200)
        .fadeOut(200, function() {
          // Check the current image source and toggle it
          var currentSrc = logoImg.attr('src');
          var newSrc = currentSrc === originalSrc ? secondSrc : originalSrc;
          logoImg.attr('src', newSrc)
            .fadeIn(200)
            .animate({
              'width': '100%',
              'height': '100%'
            }, 200);
        });
    });
  });
</script>


